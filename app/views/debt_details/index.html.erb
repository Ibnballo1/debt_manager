<P>Debt id: <%= @debt.id %></p>
<div>
  <% @debt_details.each do |dd| %>
    <P>Debt_Details id: <%=dd.id%> || Debt_Details debt_id: <%=dd.debt_id%>.</p>
  <%end%>
</div>

<section class='top-nav'>
  <%=link_to debts_path do %>
    <i class="fa-solid fa-arrow-left"></i>
  <% end %>
  <h3><%=@debt.debtor%> Debt</h3>
</section>

<section class='debt-show'>
    <article>
      <h5>Amount</h5>
      <h5>Due Date</h5>
      <h5>Reason</h5>
      <h5>Status</h5>
    </article>
    <article>
      <% @debt.debt_details.each do |debt_detail| %>
        <p><%=debt_detail.amount%></p>
        <p><%=debt_detail.due_date%></p>
        <p><%=debt_detail.default_reason(debt_detail.reason)%></p>
        <%if debt_detail.is_paid %>
          <p>Paid</p>
        <%else %>
          <p>Unpaid</p>
        <%end%>
      <%end%>
    </article>
</section>

<footer class='footer'>
  <button>
    <%=link_to "Edit Debt", edit_debt_detail_path(id: @debt_detail.id) %>
  </button>
  
  <%= form_with(model: @debt, url: debt_path(id: @debt.id),
          method: :delete, data: { confirm: 'Are you sure you want to delete this debt?' }) do |form| %>
    <%= form.button '', class: 'btn', type: 'submit' do %>
      Delete Debt
    <%end%>
  <% end %>
</footer>
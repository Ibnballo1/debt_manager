<section class='top-nav'>
  <%=link_to debts_path do %>
    <i class="fa-solid fa-arrow-left"></i>
  <% end %>
  <h3><%=@debt.debtor%> Debt</h3>
</section>

<section class='debt-show'>
    <article>
      <h5>Amount</h5>
      <h5>Due Date</h5>
      <h5>Status</h5>
    </article>
    <article>
      <p><%=@debt.amount%></p>
      <p><%=@debt.due_date%></p>
      <%if @debt.is_paid %>
        <p>Paid</p>
      <%else %>
        <p>Unpaid</p>
      <%end%>
    </article>
</section>

<footer class='footer'>
  <button>
    <%=link_to "Edit Debt", edit_debt_path(id: @debt.id) %>
  </button>
  
  <%= form_with(model: @debt, url: debt_path(id: @debt.id),
          method: :delete, data: { confirm: 'Are you sure you want to delete this debt?' }) do |form| %>
    <%= form.button '', class: 'btn', type: 'submit' do %>
      Delete Debt
    <%end%>
  <% end %>
</footer>
<h1>Debts#index</h1>

<p>Debtor is <strong><%=@debtor.name.upcase%></strong> and his id is <%=@debtor.id%></p>
<p>All Debts for <strong><%=@debtor.name.upcase%></strong></p>
<ul>
  <%@debts.each do |debt|%>
    <li><%= debt.amount %></li>
    <li><%= debt.due_date %></li>
    <li><%= debt.reason %></li>
    <li>
      <%if debt.is_paid %>
        <p>Status: Paid</p>
      <%else %>
        <p>Status: Unpaid</p>
      <%end%>
    </li>
    <li>
      <button>
        <%=link_to "Edit #{@debtor.name}'s Debt", edit_user_debtor_debt_path(user_id: @debtor.user_id, debtor_id: @debtor.id, id: debt.id) %>
      </button>
    </li>
  <%end%>
</ul>

<button>
  <%=link_to 'Add Debt', new_user_debtor_debt_path(user_id: @debtor.user_id, debtor_id: @debt.id) %>
</button>

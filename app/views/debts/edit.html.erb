<h3>Edit page</h3>
<%= bootstrap_form_with model: @debt, url: user_debt_path(user_id: @user.id, id: @debt.id) do |form| %>
  <%= form.text_field :debtor %>
  <%= form.date_field :due_date %>
  <%= form.number_field :amount %>
  <%= form.check_box :is_paid, skip_label: true %>
  <%= form.submit 'Edit Debt' %>
<%end%>